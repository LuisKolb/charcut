{
    "version": "2.0.0",
    "tasks": [{
        "label": "tailwind-compile",
        "isBackground": true,
        "command": "npx", // Could be any other shell command
        "args": ["tailwindcss","-i","./app/static/src/input.css","-o","./app/static/dist/css/output.css","--watch"],
        "type": "shell",
        "problemMatcher": [
            {
              "pattern": [
                {
                  "regexp": ".",
                  "file": 1,
                  "location": 2,
                  "message": 3
                }
              ],
              "background": {
                "activeOnStart": true,
                "beginsPattern": ".",
                "endsPattern": ".",
              }
            }
          ]
    }]
}

